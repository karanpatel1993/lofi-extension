{
  "manifest_version": 3,
  "name": "Lo-Fi Timer",
  "version": "1.0.0",
  "description": "A Chrome extension that plays lo-fi tracks with a customizable timer",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "js/background.js"
  }
} 